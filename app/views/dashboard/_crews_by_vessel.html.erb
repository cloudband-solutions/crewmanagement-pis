<div class="panel panel-primary">
  <div class="panel-heading">
    <b>Crew Count By Vessel</b>
  </div>
  <div class="panel-body">
    <div class="infiniscroll pp">
      <table class="table table-bordered">
        <thead style="text-align: left;">
          <tr>
            <th>Vessel Name</th>
            <th>Count</th>
          </tr>
        </thead>
        <tbody id="vesselTable">
        </tbody>
      </table>
    </div>
</div>
</div>

<script>
$(document).ready(function() {
  var url = "<%= api_crew_count_by_vessel_path %>";
  $.get(url, function(data) {
    $.each(data, function(i, d) {
      $("#vesselTable").append('<tr><td>' + d.name + '</td><td>' + d.count + '</td></tr>');
    });
  });
});
</script>
