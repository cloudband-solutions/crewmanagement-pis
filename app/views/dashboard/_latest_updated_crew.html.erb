<div class="for_non_mobile">
  <div id="latest_crew">
    <% if !crew.nil? %>
        <div class="lcdash">
           <h4>Latest Added Crew <small style="color:white;"><%= crew.updated_at.strftime('%B %e, %Y') %></small></h4>
              <div class="row">
              <div class="col-md-3">
                <%= image_tag crew.picture.url(:standard) %>
              </div>

             <div class="col-md-9 info">
              <div class="cname"><%= crew.to_s_list %> <small><%= crew.code_number %></small>  </div> <br />
               <br />
              <div class="rank"><%= crew.rank %></div>
              <div class="">
                <%= link_to edit_crew_path(crew), class: "btn btn-xs btn-default" do %>
                  <i class="glyphicon glyphicon-pencil"></i> Edit
                <% end %>
                <%= link_to crew_path(crew), class: "btn btn-xs btn-default" do %>
                  <i class="glyphicon glyphicon-user"></i> Profile
                <% end %>
                <%= link_to crews_path, class: "btn btn-xs btn-default" do %>
                  <i class="glyphicon glyphicon-folder-close"></i> Go to Database
                <% end %>
              </div> 
            </div>
          </div>
       </div>
      <% else %>
      No crew added. Please <%= link_to "add one first", new_crew_path %>.
    <% end %>
  </div>
</div>
  
