<%= simple_nested_form_for [:account, current_user], url: account_user_path(current_user, change_password: "#{params[:change_password] == 'true' ? 'true' : ''}"), method: :put, defaults: { wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } }, html: { multipart: true, novalidate: true } do |f| %>
  <% if params[:change_password] == "true" %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% else %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :avatar, as: :file %>
    <%= image_tag f.object.avatar.url(:profile) %>
  <% end %>
  <hr>
  <div class="form-actions">
    <%= f.submit "Save Profile", class: "btn btn-success" %>
    <%= link_to "Back to Profile", account_user_path(current_user), class: "btn btn-default" %>
  </div>
<% end %>
