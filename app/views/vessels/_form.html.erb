<%= simple_form_for vessel, defaults: { wrapper_html: { class: "form-group" }, input_html: { class: 'form-control' } } do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :name %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :vessel_type, as: :select, collection: Vessel::VESSEL_TYPE %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :flag %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :horse_power %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :engine_make %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <hr>
      <%= f.submit "Save Record", class: "btn btn-primary form-button" %>
      </hr>
    </div>
  </div>
<% end %>
