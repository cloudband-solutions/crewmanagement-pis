<%= simple_form_for vessel, defaults: { wrapper_html: { class: "form-group" }, input_html: { class: 'form-control' } } do |f| %>
  <div class="row">
    <div class="col-md-3">
      <%= f.input :name %>
      <%= f.input :code %>
    </div>
    <div class="col-md-3">
      <%= f.input :owner %>
    </div>
    <div class="col-md-3">
      <%= f.association :vessel_type %>
    </div>
    <div class="col-md-3">
      <%= f.input :flag %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :horse_power %>
      <%= f.input :off_numb %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :engine_make %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <hr>
      <%= f.submit "Save Record", class: "btn btn-primary form-button" %>
      </hr>
    </div>
  </div>
<% end %>
