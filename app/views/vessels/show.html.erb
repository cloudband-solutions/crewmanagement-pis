<%= render partial: "vessels/crew_list_modal" %>
<div id="vessels">
  <div class="panel panel-info">
   <div class="panel-heading">
      <b><%= @vessel.name %></b>
   </div>

   <div class="panel-body">
    <div class="row">
      <%= render partial: "vessel", locals: { vessel: @vessel } %>
    </div>

  <div class="row">
    <div class="col-md-12 vessel_show">
      <ul class="nav nav-tabs nav-justified vshow">
        <li class="active"><%= link_to "Details", "#details", "data-toggle" => "tab" %></li>
        <li class=""><%= link_to "Current Crew", "#current-crew", "data-toggle" => "tab" %></li>
      </ul>
      <div class="tab-content tab-content-inner">
        <div class="tab-pane active" id="details">
          <%= render partial: "vessels/details", locals: { vessel: @vessel } %>
        </div>
        <div class="tab-pane" id="current-crew">
          <%= render partial: "reports/crew_manifest_list", locals: { crews: Crew.all_by_vessel(@vessel), license_types: [], document_kinds: DocumentKind.where(is_default: true), certificate_types: [] } %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
