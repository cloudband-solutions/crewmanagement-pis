<style>
body {
  background-image: url("<%= asset_path('triangular.png') %>");
}
</style>

<div class="for_non_mobile">
  <div class="login-box">
    <div id="banner">
    Personnel Information System
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="">
        <%= f.input :email, required: false, autofocus: true, input_html: { class: "form-control" } %><br>
        <%= f.input :password, required: false, input_html: { class: "form-control" } %>
        <br>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign in", class: "btn btn-primary btn-lg btn-block btn-success" %>
      </div>
      <div>
        Powered by:
        <%= link_to "#" do %>
          <%= image_tag "cbs.png", width: "250" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

