<div class="baliwag_logo"><%= image_tag "sample.png" %></div>

<div class="sign_in">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, input_html: { class: "form-control input-size_login" } %>
      <%= f.input :password, required: false, input_html: { class: "form-control input-size_login" } %>
      <br>
    </div>

    <div class="form-actions button">
      <%= f.button :submit, "Sign in", class: "btn btn-primary btn-lg btn-block btn-success" %>
    </div>
  <% end %>

 

</div>