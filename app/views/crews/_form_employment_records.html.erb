<%= f.simple_fields_for :employment_records do |ff| %>
  <div class="well">
    <div class="row">
      <div class="col-md-4">
        <%= ff.association :vessel, label: "Vessel" %> 
      </div>
      <div class="col-md-4">
        <%= ff.association :manning_agent %>
      </div>
      <div class="col-md-4">
         <%= ff.association :rank, label: "Rank"  %>
      </div>
    </div> 
    <div class="row crew_doc">
      <div class="col-md-4">
       <%= ff.input :sign_on, as: :string, input_html: { class: "datepick form-control" } %>
      </div>
      <div class="col-md-4">
       <%= ff.input :sign_off, as: :string, input_html: { class: "datepick form-control" } %>
      </div>
      <div class="col-md-4">
         <%= ff.input :reason_of_disembarkation, label: "Reason of Disembarkation", input_html: { class: "form-control" }, placeholder: "Enter Reason"  %>
      </div>
    </div> 
    <%= ff.link_to_remove "Remove Record", class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
  </div>
<% end %>

<%= f.link_to_add "Add Employment Record", :employment_records, class: "btn btn-info" %>
