<div class="row">
  <div class="col-md-2">
    <div class="box-image">
    <%= image_tag @crew.picture.url(:standard) %>
    </div>
  </div>
  <div class="col-md-4">
    <h2><%= @crew %> <small><%= @crew.code_number %></small></h2>
    <h3><%= @crew.rank %></h3>
    <div class="">
      <%= link_to "Edit", edit_crew_path(@crew), class: "" %> |
      <%= link_to "Back to List", crews_path %>
    </div>  
  </div>
</div>
<div class="row">
  <div class="col-md-12 form-number">
    <tbody>
      <tr>
        <td>General Information</td>
      </tr>
    </tbody>
  </div>
</div>
<div class="row details">
  <div class="col-md-12">
    <table class="table table-bordered table-stripped">
      <tr>
        <td class="label-a">
          Vessel Assigned:
        </td>
        <td class="label-b">
          <%= @crew.vessel %>
        </td>
         <td class="label-a">
          Civil Status
        </td>
        <td class="label-b">
          <%= @crew.civil_status %>
        </td>
        
      </tr>
      <tr>
       <td class="label-a">
          Telephone:
        </td>
        <td class="label-b">
        <%= @crew.telephone_no %>
        </td>
        <td class="label-a">
         Cellphone:
        </td>
        <td class="label-b">
          <%= @crew.cellphone_no %>
        </td>
      </tr>
      <tr>
        <td class="label-a">
           Birthday:
        </td>
        <td class="label-b">
         <%= @crew.birthday %>
        </td>
        <td class="label-a">
         Birth Place:
        </td>
        <td class="label-b">
          <%= @crew.birthplace %>
        </td>
      </tr>
       <tr>
        <td class="label-a">
          Age:
        </td>
        <td class="label-b">
          <%= @crew.age %>
        </td>
        <td class="label-a">
         Nationality:
        </td>
        <td class="label-b">
          <%= @crew.nationality %>
        </td>
      </tr>
      <tr>
        <td class="label-a">
            Height:
        </td>
        <td class="label-b">
          <%= @crew.height %>
        </td>
        <td class="label-a">
         Weight:
        </td>
        <td class="label-b">
          <%= @crew.weight%>
        </td>
       </tr>
       <tr>
      <td class="label-a">
          Shoe Size: 
       </td>
       <td class="label-b">
        <%= @crew.shoe_size %>
        </td>

        <td class="label-a">
         Cloth Size:
        </td>
        <td class="label-b">
          <%= @crew.cloth_size %>
        </td>   
      </tr>
      <tr>
       <td class="label-a">
          Eye Color: 
        </td>
        <td class="label-b">
          <%= @crew.eye_color %>
        </td>
        <td class="label-a">
          Distinguishing Marks
        </td>
        <td class="label-b">
          <%= @crew.distinguishing_marks %>
        </td>
      </tr>

    </table>
  </div>
  
</div>

<div class="row details">
  <div class="col-md-12 nearest-rel">
    <table class="table table-bordered table-stripped">
      <tr>
        <td class="label-a">
          Home Address
        </td>
        <td class="label-b">
          <%= @crew.address %>
        </td>
        <td class="label-a">
          SSS Number
        </td>
        <td class="label-b">
          <%= @crew.sss_no %>
        </td>
      </tr>
      <tr>  
        <td class="label-a">
          Nearest Relative:
        </td>
        <td class="label-b">
          <%= @crew.nearest_relative_name %>
        </td>
        <td class="label-a">
          TIN Number
        </td>
        <td class="label-b">
          <%= @crew.tin_no %>
        </td>
      </tr>
      <tr>  
        <td class="label-a">
          Relationship:
        </td>
        <td class="label-b">
        <%= @crew.nearest_relative_relationship %>
        </td>
        <td class="label-a">
          Pag-ibig Number
        </td>
        <td class="label-b">
          <%= @crew.pagibig_number %>
        </td>
      </tr>
      <tr>  
        <td class="label-a">
          Address of nearest relative:
        </td>
        <td class="label-b">
        <%= @crew.nearest_relative_address %>
        </td>
        <td class="label-a">
          Philhealth Number
        </td>
        <td class="label-b">
          <%= @crew.philhealth_number %>
        </td>
      </tr>
    </table>
  </div>
</div>

<div class="row details">
  <h2>EDUCATIONAL ATTAINMENT</h2>
  <div class="row">
    <div class="col-md-12">
      <%= render partial: "crews/educational_attainments", locals: { educational_attainments: @crew.educational_attainments } %>
    </div>
  </div>
</div>

<div class="row details">
  <div class="row">
    <div class="col-md-12">
      <h2>LICENSES</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= render partial: "crews/licenses", locals: { licenses: @crew.licenses } %>
    </div>
  </div>
</div>


<div class="row details">
  <h2>CERTIFICATES</h2>
  <div class="col-md-12">
    <%= render partial: "crews/certificates", locals: { certificates: @crew.certificates } %>
  </div>
</div>

<div class="row details">
  <h2>QUARANTINE RECORDS</h2>
  <div class="col-md-12">
    <%= render partial: "crews/quarantine_records", locals: { quarantine_records: @crew.quarantines } %>
  </div>
</div>

<div class="row details">
  <h2>EMPLOYMENT RECORD</h2>
   <div class="col-md-12">
    <%= render partial: "crews/employment_records", locals: { employment_records: @crew.employment_records } %>
</div>
</div>
<div class="row details">
  <h2>Signature</h2>
  <div class="col-md-12">
    <%= image_tag @crew.signature.url(:list) %>
  </div>
</div>
<hr>
