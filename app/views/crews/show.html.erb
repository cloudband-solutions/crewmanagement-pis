<div class="row">
  <div class="col-md-2">
    <div class="box-image">
      <%= image_tag "haha.jpg" %>
    </div>
  </div>
  <div class="col-md-10 name-crew">
      <h2><%= @crew %></h2>
      <h4><%= @crew.address %></h4>
  </div>
</div>
<div class="row">
  <div class="col-md-12 form-number">
    <tbody>
          <tr>
            <td>Form Number:</td>
          </tr>
    </tbody>
  </div>
</div>
<div class="row details">
  <div class="col-md-12">
          <table class="table table-bordered table-stripped">
            <tr>
              <td class="label-a">
                Vessel Assigned:
              </td>
              <td class="label-b">
                <%= @crew.vessel_id %>
              </td>
               <td class="label-a">
                Code Number:
              </td>
              <td class="label-b">
                <%= @crew.code_number %>
              </td>
              
            </tr>
            <tr>
             <td class="label-a">
                Telephone:
              </td>
              <td class="label-b">
              <%= @crew.telephone_no %>
              </td>
              <td class="label-a">
               Cellphone:
              </td class="label-b">
              <td >
                <%= @crew.cellphone_no %>
              </td>
            </tr>
            <tr>
              <td class="label-a">
                 Birthday:
              </td>
              <td class="label-b">
               <%= @crew.birthday %>
              </td>
              <td class="label-a">
               Birth Place:
              </td>
              <td class="label-b">
                <%= @crew.birthplace %>
              </td>
             
            </tr>
             <tr>
              <td class="label-a">
                Age:
              </td>
              <td class="label-b">
                <%= @crew.age %>
              </td>
              <td class="label-a">
               Nationality:
              </td>
              <td class="label-b">
                <%= @crew.nationality %>
              </td>
               

              
            </tr>
            <tr>
            <td class="label-a">
                Height:
              </td>
              <td class="label-b">
                <%= @crew.height %>
              </td>
              <td class="label-a">
               Weight:
              </td>
              <td class="label-b">
                <%= @crew.weight%>
              </td>
             </tr>
             <tr>
            <td class="label-a">
                Shoe Size: 
             </td>
             <td class="label-b">
              <%= @crew.shoe_size %>
              </td>

              <td class="label-a">
               Cloth Size:
              </td>
              <td class="label-b">
                <%= @crew.cloth_size %>
              </td>   
            </tr>
            <tr>
             <td class="label-a">
                Eye Color: 
              </td>
              <td class="label-b">
                <%= @crew.eye_color %>
              </td>
              <td class="label-a">
                SSS No: 
            </td>
            <td class="label-b">
              <%= @crew.sss_no %>
            </td>

            
            </tr>

            <tr>
               <td class="label-a">
               TIN #:
              </td>
              <td class="label-b">
                <%= @crew.tin_no %>
              </td>

            </tr>

          </table>
  </div>
  
</div>

<div class="row details">
  <div class="col-md-12 nearest-rel">
    <table class="table table-bordered table-stripped">
      <tr>  
        <td class="label-a">
          Nearest Relative:
        </td class="label-b">
        <td>
        <%= @crew.nearest_relative_name %>
        </td>
      </tr>
      <tr>  
        <td class="label-a">
          Relationship:
        </td>
        <td class="label-b">
        <%= @crew.nearest_relative_relationship %>
        </td>
      </tr>
      <tr>  
        <td class="label-a">
          Address:
        </td>
        <td class="label-b">
        <%= @crew.nearest_relative_address %>
        </td>
      </tr>

    </table>
  </div>
</div>