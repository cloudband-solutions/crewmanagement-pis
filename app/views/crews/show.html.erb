              <td class="label-b">
                <%= @crew.age %>
              </td>
              <td class="label-a">
               Nationality:
              </td>
              <td class="label-b">
                <%= @crew.nationality %>
              </td>
               

              
            </tr>
            <tr>
              <td class="label-a">
                  Height:
              </td>
              <td class="label-b">
                <%= @crew.height %>
              </td>
              <td class="label-a">
               Weight:
              </td>
              <td class="label-b">
                <%= @crew.weight%>
              </td>
             </tr>
             <tr>
            <td class="label-a">
                Shoe Size: 
             </td>
             <td class="label-b">
              <%= @crew.shoe_size %>
              </td>

              <td class="label-a">
               Cloth Size:
              </td>
              <td class="label-b">
                <%= @crew.cloth_size %>
              </td>   
            </tr>
            <tr>
             <td class="label-a">
                Eye Color: 
              </td>
              <td class="label-b">
                <%= @crew.eye_color %>
              </td>
              <td class="label-a">
                SSS No: 
            </td>
            <td class="label-b">
              <%= @crew.sss_no %>
            </td>

            
            </tr>

            <tr>
               <td class="label-a">
               TIN #:
              </td>
              <td class="label-b">
                <%= @crew.tin_no %>
              </td>

            </tr>

          </table>
  </div>
  
</div>

<div class="row details">
  <div class="col-md-12 nearest-rel">
    <table class="table table-bordered table-stripped">
      <tr>  
        <td class="label-a">
          Nearest Relative:
        </td>
        <td class="label-b">
        <%= @crew.nearest_relative_name %>
        </td>
      </tr>
      <tr>  
        <td class="label-a">
          Relationship:
        </td>
        <td class="label-b">
        <%= @crew.nearest_relative_relationship %>
        </td>
      </tr>
      <tr>  
        <td class="label-a">
          Address:
        </td>
        <td class="label-b">
        <%= @crew.nearest_relative_address %>
        </td>
      </tr>

    </table>
  </div>
</div>

<div class="row details">
  <div class="row">
    <div class="col-md-12">
      <h2>LICENSES</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= render partial: "crews/licenses", locals: { licenses: @crew.licenses } %>
    </div>
  </div>
</div>


