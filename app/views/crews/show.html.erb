<hr>
<div class="row">
  <div class="col-md-2">
    <div class="box-image">
    <%= image_tag @crew.picture.url(:standard) %>
    </div>
  </div>
  <div class="col-md-4">
    <h2><%= @crew %> <small><%= @crew.code_number %></h2>
    <h4><%= @crew.address %></h4>
    <div class="">
      <%= link_to "Edit", edit_crew_path(@crew), class: "" %> |
      <%= link_to "Back to List", crews_path %> |
    </div>  
    <div class="">
      <select id="report_type">
        <option value="misuga">Misuga</option>
      </select>
      <button onclick="redirect_to_report();" class="btn btn-xs btn-primary">Report</button>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12 form-number">
    <tbody>
          <tr>
            <td>General Information</td>
          </tr>
    </tbody>
  </div>
</div>
<div class="row details">
  <div class="col-md-12">
