<%= f.link_to_add "<i class='glyphicon glyphicon-plus'></i> Add Vessel Evaluation".html_safe, :crew_vessel_evaluations, class: "btn btn-info" %>
<br><br>
<%= f.simple_fields_for :crew_vessel_evaluations do |ff| %>
  <div class="well">
    <div class="row">
      <div class="col-md-4">
        <%= ff.association :vessel, as: :select, collection: Vessel.select("*").order(:name) %>
      </div>
      <div class="col-md-4">
        <% if ff.object.date_of_evaluation.nil? %>
          <%= ff.input :date_of_evaluation, as: :string, input_html: { class: "datepick form-control" } %>
        <% else %>
          <%= ff.input :date_of_evaluation, as: :string, input_html: { value: ff.object.date_of_evaluation.strftime('%d-%B-%Y'), class: "datepick form-control" } %>
        <% end %>
      </div>
      <div class="col-md-4">
        <%= ff.input :attachment, as: :file %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= ff.input :recommendation_letter, as: :file %>
      </div>
      <div class="col-md-4">
        <%= ff.input :training_record, as: :file %>
      </div>
    </div>
    <%= ff.link_to_remove "<i class='glyphicon glyphicon-minus'></i> Remove Record".html_safe, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
  </div>
<% end %>

