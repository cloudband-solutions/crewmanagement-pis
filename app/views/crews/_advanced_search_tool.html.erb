<div class="well">
  <h2>Advanced Search</h2>
  <%= simple_form_for :search, defaults: { wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control'} }, html: { novalidate: true }, method: :get, url: crews_advanced_search_path do |f| %>
    <div class="row">
      <div class="col-md-12">
        <%= f.input :name, input_html: { value: params[:search].nil? ? '' : params[:search][:name] } %>
        <%= f.input :vessel, as: :select, collection: Vessel.all, selected: params[:search].nil? ? '' : params[:search][:vessel] %>
        <%= f.input :rank, collection: Rank.all, as: :select, selected: params[:search].nil? ? '' : params[:search][:rank] %>
        <%= f.input :principal, collection: Principal.all, as: :select, selected: params[:search].nil? ? '' : params[:search][:principal] %>
        <%= f.input :school, collection: UtilityService.unique_schools, as: :select, selected: params[:search].nil? ? '' : params[:search][:school] %>
        <hr>
        <%= f.submit "Search", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>



