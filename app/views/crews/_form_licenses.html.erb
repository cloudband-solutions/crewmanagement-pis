<%= f.link_to_add "<i class='glyphicon glyphicon-plus'></i> Add License".html_safe, :licenses, class: "btn btn-info" %>
<br><br>
<div id="license_records">
  <%= f.simple_fields_for :licenses do |ff| %>
    <div class="well cform">
      <div class="row">
        <div class="col-md-3">
          <%= ff.association :license_type, input_html: { class: "form-control select-select2" } %>
        </div>
        <div class="col-md-3">
          <%= ff.association :license_category, input_html: { class: "form-control select-select2" } %>
        </div>
        <div class="col-md-3">
          <%= ff.input :license_number %>
        </div>
        <div class="col-md-3">
          <%= ff.association :rank, input_html: { class: "form-control select-select2" } %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
           <%= ff.input :date_issued, as: :date, start_year: Date.today.year - 40 %>
        </div>
        <div class="col-md-6">
            <%= ff.input :expiry_date %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
        <%= ff.association :training_center, input_html: { class: "form-control select-select2" } %>
       </div>
        <div class="col-md-6">
          <%= ff.input :attachment, as: :file %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <%= ff.input :is_reverting %>
        </div>
      </div>
      <%= ff.link_to_remove "Remove Record", class: "btn btn-danger", data: { confirm: "Are you sure?" }  %>
    </div>
  <% end %>
</div>
