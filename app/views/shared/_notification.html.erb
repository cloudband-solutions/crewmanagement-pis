<% flash.each do |key, value| %>

  <% if key == "success" %>
    <script>
    $(document).on("ready page:load", function() {
      value = '<%= value %>'
      toastr.success(value);
    });
    </script>
  <% elsif key == "error" %>
    <script>
      value = '<%= value %>'
      toastr.error(value);
    </script>
  <% else %>
    <script>
      value = '<%= value %>'
      toastr.info(value);
    </script>
  <% end %>
<% end %>
